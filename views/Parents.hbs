{{!-- Create a table --}}

<div id="browse" border-style="display: block">
<p><strong>Browse Parents</strong></p>
<table id = "parent-table" border="1" cellpadding="5" >

    <thead >

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr >
            <th style="text-align:center; "> ID </th>
            <th style="text-align:center; " > First Name</th>
            <th style="text-align:center; " > Last Name</th>
            <th style="text-align:center; " > Phone Number</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        <!--{{#each data}}-->
        <tr data-value = {{this.idParent}}>
            <td align = 'middle'>{{this.idParent}}</td>

            <td align = 'middle'>{{this.parentFirstName}}</td>

            <td align = 'middle'>{{this.parentLastName}}</td>

            <td align = 'middle'>{{this.phoneNumber}}</td>

            <td align = 'middle'><button onclick="deleteTest({{this.idParent}}), window.location.reload()">Delete</button></td>
        </tr>
        <!--{{/each}}-->
    </tbody>
</table>
<script src="./js/delete_parent.js"></script>

<!-- Form to search for a student -->
<h2>Search For a Parent </h2>
<p>Search by last name using the field below. Partial names are OK too!</p>
<form id="search-parent-html" method='GET' action='/Parents'>
    <label for="input-parentLastName">Search by Last Name: </label>
    <input type="text" name="parentLastName" id="input-parentLastName">
    <input type="submit">
    <a href='/Parents'><button>Reset</button></a>
</form>

{{!-- Form to add a record to the table  --}}
<h2>Add a new Parent</h2>
<p>To add a new parent, please enter the test information below and click 'Submit'!</p>
<form id="add-parent-ajax">
    <label for="input-firstName">First Name: </label>
    <input type="text" name="input-firstName" id="input-firstName">

    <label for="input-lastName">Last Name: </label>
    <input type="text" name="input-lastName" id="input-lastName">
    
    <label for="input-phoneNumber">Phone Number: </label>
    <input type="text" name="input-phoneNumber" id="input-phoneNumber">

    <input type="submit" onclick="window.location.reload(true)">
</form>

<!-- Form to update a student -->

<h2>Updating A Parent</h2>
<p>To update a specific parent select the test ID from the drop-down menu on the left.</p>
<form id="update-parent-form-ajax">

    <label for="update-idParent">Parent ID: </label>
    <select name="update-idParent" id="mySelect">
        <option value="parent">Select a parent</option>
        {{#each data}}
        <option value="{{this.idParent}}">{{this.idParent}}</option>
        {{/each}}
    </select>

    <label for="update-firstName">First Name: </label>
    <input type="text" name="update-firstName" id="update-firstName">

    <label for="update-lastName">Last Name: </label>
    <input type="text" name="update-lastName" id="update-lastName">
    
    <label for="update-phoneNumber">Phone Number: </label>
    <input type="text" name="update-phoneNumber" id="update-phoneNumber">

    <input type="submit" onclick="window.location.reload(true)">

</form>
<script src="./js/update_parent.js"></script>

