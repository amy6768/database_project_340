{{!-- Create a table --}}

<div id="browse" border-style="display: block">
<p><strong>Browse Students Teacher</strong></p>
<table id = "studentsTeacher-table" border="1" cellpadding="5" >

    <thead >

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr >
            <th style="text-align:center; "> Student/Teacher ID </th>
            <th style="text-align:center; " > Teacher Name</th>
            <th style="text-align:center; " > Student Name</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        <!--{{#each data}}-->
        <tr data-value = {{this.idStudentsTeacher}}>
            <td align = 'middle'>{{this.idStudentsTeacher}}</td>

            <td align = 'middle' > {{this.teacherFirstName}}</td>

            <td align = 'middle'>{{this.studentFirstName}}</td>

            <td align = 'middle'><button onclick="deleteTest({{this.idStudentsTeacher}}), window.location.reload()"">Delete</button></td>
        </tr>
        <!--{{/each}}-->
    </tbody>
</table>
<script src="./js/delete_students_teacher.js"></script>

{{!-- Form to add a record to the table  --}}


<h2>Add a new teacher for a student</h2>
<p>To add a teacher for a student, please enter the test information below and click 'Submit'!</p>
<form id="add-students-teacher-ajax">
    <label for="add-idTeacher">Choose a Test: </label>
    <select name="add-idTeacher" id="add-idTeacher">
        <option value="idTeacher">Select a Teacher</option>
        {{#each idTeacher}}
        <option value="{{this.idTeacher}}">{{this.teacherFirstName}}</option>
        {{/each}}
    </select>

    <label for="add-idStudent">Choose a Student: </label>
    <select name="add-idStudent" id="add-idStudent">
        <option value="idStudent">Select a Student</option>
        {{#each idStudent}}
        <option value="{{this.idStudent}}">{{this.studentFirstName}}</option>
        {{/each}}
    </select>

    <input type="submit" onclick="window.location.reload(true)">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script type="text/javascript" src="/js/add_students_teacher.js"></script>