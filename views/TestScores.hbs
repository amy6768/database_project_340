{{!-- Create a table --}}

<div id="browse" border-style="display: block">
<p><strong>Browse Test Scores</strong></p>
<table id = "testScores-table" border="1" cellpadding="5" >

    <thead >

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr >
            <th style="text-align:center; "> Test/Scores ID </th>
            <th style="text-align:center; " > Test Date</th>
            <th style="text-align:center; " > Test Score</th>
            <th style="text-align:center; " > Student Name</th>
            <th style="text-align:center; " > Test Name</th>
            <th style="text-align:center; " > Notes</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        <!--{{#each data}}-->
        <tr data-value = {{this.idTestScore}}>
            <td align = 'middle'>{{this.idTestScore}}</td>

            <td align = 'middle'> {{this.testDate}}</td>

            <td align = 'middle'>{{this.testScore}}</td>

            <td align = 'middle'>{{this.studentFirstName}}</td>

            <td align = 'middle'>{{this.testName}}</td>

            <td align = 'middle'>{{this.notes}}</td>

            <td align = 'middle'><button onclick="deleteTest({{this.idTestScore}}), window.location.reload()">Delete</button></td>
        </tr>
        <!--{{/each}}-->
    </tbody>
</table>
<script src="./js/delete_test_score.js"></script>

{{!-- Form to add a record to the table  --}}


<h2>Add a new test score</h2>
<p>To add a new test score, please enter the test information below and click 'Submit'!</p>
<form id="add-test-score-ajax">
    <label for="add-idTest">Choose a Test: </label>
    <select name="add-idTest" id="add-idTest">
        <option value="Test">Select a Test</option>
        {{#each idTest}}
        <option value="{{this.idTest}}">{{this.testName}}</option>
        {{/each}}
    </select>

    <label for="add-idStudent">Choose a Student: </label>
    <select name="add-idStudent" id="add-idStudent">
        <option value="TestScore">Select a Student</option>
        {{#each idStudent}}
        <option value="{{this.idStudent}}">{{this.studentFirstName}} {{this.studentLastName}}</option>
        {{/each}}
    </select>
    
    <label for="input-testDate">Test Date: </label>
    <input type="text" name="input-testDate" id="input-testDate" value = "mm-dd-yy">

    <label for="input-testScore">Test Score: </label>
    <input type="text" name="input-testScore" id="input-testScore">
    
    <label for="input-testNotes">Test Notes: </label>
    <input type="text" name="input-testNotes" id="input-testNotes">

    <input type="submit" onclick="window.location.reload(true)">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script type="text/javascript" src="/js/add_test_score.js"></script>