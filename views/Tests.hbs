{{!-- Create a table --}}

<div id="browse" border-style="display: block">
<p><strong>Browse Tests</strong></p>
<table id = "test-table" border="1" cellpadding="5" >
    <thead >

        <tr >
            <th style="text-align:center; "> ID </th>
            <th style="text-align:center; " > Test Name</th>
            <th style="text-align:center; " > Test Description</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        
        <!--{{#each data}}-->
        <tr data-value = {{this.idTest}}>
            <td align = 'middle'>{{this.idTest}}</td>

            <td align = 'middle'>{{this.testName}}</td>

            <td align = 'middle'>{{this.testDescription}}</td>

            <td align = 'middle'><button onclick="deleteTest({{this.idTest}}), window.location.reload()">Delete</button></td>
        </tr>
        <!--{{/each}}-->
    </tbody>
</table>
<script src="./js/delete_test.js"></script>

<!-- Form to search for a student -->
<h2>Search For a Test </h2>
<p>Search by first part of the test name.</p>
<form id="search-test-html" method='GET' action='/Tests'>
    <label for="input-testName">Search by Test Name: </label>
    <input type="text" name="testName" id="input-testName-html-search">
    <input type="submit">
    <a href='/Tests'><button>Reset</button></a>
</form>

{{!-- Form to add a record to the table  --}}
<h2>Add a new test</h2>
<p>To add a new test, please enter the test information below and click 'Submit'!</p>
<form id="add-test-ajax">
    <label for="input-testName">Test Name: </label>
    <input type="text" name="input-testName" id="input-testName">
    
    <label for="input-testDescription">Test Description: </label>
    <input type="text" name="input-testDescription" id="input-testDescription">

    <input type="submit" onclick="window.location.reload(true)">
</form>

<!-- Form to update a student -->

<h2>Updating A Test</h2>
<p>To update a specific test select the test ID from the drop-down menu on the left.</p>
<p>If the information doesn't appear in the table right away please reload the page</p>
<form id="update-test-form-ajax">

    <label for="update-idTest">Student ID: </label>
    <select name="update-idTest" id="mySelect">
        <option value="test">Select a Test</option>
        {{#each data}}
        <option value="{{this.idTest}}">{{this.idTest}}</option>
        {{/each}}
    </select>

    <label for="update-testName">Test Name: </label>
    <input type="text" name="update-testName" id="update-testName">
    
    <label for="update-testDescription">Test Description: </label>
    <input type="text" name="update-testDescription" id="update-testDescription">

    <input type="submit" onclick="window.location.reload(true)">

</form>

<script src="./js/update_test.js"></script>

